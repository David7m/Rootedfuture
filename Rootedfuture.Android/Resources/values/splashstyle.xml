<resources>
	<style name="SplashStyle.Base" parent="Theme.AppCompat.Light">
	</style>

	<style name="SplashStyle" parent="SplashStyle.Base">
	</style>

	<style name="SplashStyle.Splash" parent ="Theme.AppCompat.Light.NoActionBar">
		<item name="colorPrimary">#7b9b5c</item>
		<!-- colorPrimaryDark is used for the status bar -->
		<item name="colorPrimaryDark">#7b9b5c</item>
		<!-- colorAccent is used as the default value for colorControlActivated
         which is used to tint widgets -->
		<item name="colorAccent">#7b9b5c</item>
		<item name="android:statusBarColor">#7b9b5c</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:windowActionBar">true</item>
		<item name="android:windowBackground">@drawable/splash_screen</item>
	</style>
</resources>